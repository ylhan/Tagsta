<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.IndependentTagViewController">
   <center>
      <ListView fx:id="tagList" onKeyPressed="#handleKeyEnter" onMouseClicked="#handleClick" prefHeight="200.0" prefWidth="200.0">
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleDelete" text="Delete" />
              </items>
            </ContextMenu>
         </contextMenu>
      </ListView>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="77.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button graphicTextGap="2.0" mnemonicParsing="false" onAction="#addTag" text="+" />
            <TextField fx:id="tagListTextField" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
